<?xml version='1.0' encoding='utf-8'?>
<widget id="com.aranda.ensiklopedia" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ensiklopedia Ibu Hamil dan Balita</name>
    <description>
        Aplikasi panduan kesehatan bagi ibu hamil dan balita
    </description>
    <author email="arsoedjono@gmail.com" href="http://its.ac.id">
        Aranda Rizki Soedjono
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
